{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "docker:enableMajor",
    "security:openssf-scorecard",
    ":semanticCommits",
    ":timezone(America/New_York)"
  ],
  "flux":{
    "fileMatch": [
      "(^|/)cluster/.+\\.ya?ml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)cluster/.+\\.ya?ml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)cluster/.+\\.ya?ml$"
    ]
  },
  "prHourlyLimit": 10,
  "packageRules": [
    {
      "groupName": "immich containers",
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePrefixes": [
        "ghcr.io/immich-app"
      ]
    },
    { 
      "groupName": "renovate",
      "matchDatasources": [
        "docker",
        "helm"
      ],
      "matchPackagePatterns": [
        "^renovate"
      ]
    }
  ]
}
